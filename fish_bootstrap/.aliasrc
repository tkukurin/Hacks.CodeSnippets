
alias t=tmux
alias tls='tmux ls'

alias ls='exa -al'
alias cat=bat
alias v=nvim
# Apparently start-server is deprecated for a while now
# https://stackoverflow.com/questions/5570451/how-to-start-emacs-server-only-if-it-is-not-started
export ALTERNATE_EDITOR=""
alias e='emacsclient --tty'

alias vrc='nvim ~/.vim/vimrc'
alias vfish='nvim ~/.config/fish/config.fish'
alias vbash='nvim ~/.bashrc'

alias ga='git add'
alias gs='git status'
alias gb='git branch'
alias gco='git checkout'
alias gds='git diff --staged'
alias gd='git diff'
alias gc='git commit'
alias gp='git pull'
alias gu='git push'
alias gpom='git push origin master'

alias ipy='ipython --no-banner --TerminalInteractiveShell.editing_mode=vi --InteractiveShellApp.extensions autoreload --InteractiveShellApp.exec_lines "%autoreload 2"'

